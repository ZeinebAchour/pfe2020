                                <!--<span asp-validation-for="InstanceName" class="text-danger"></span>-->
                            </div>

                             <div class="form-group">
            <label asp-for="IdInstances" class="control-label">Selectionner une instance</label>
            <select asp-for="IdInstances" class="form-control" asp-items="ViewBag.IdInstances"></select>

        </div>






                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>






            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

</section>
<!-- /.content -->
</div>