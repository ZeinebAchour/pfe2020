@model pfeProject2020.Models.SsmsDatabases

@{
    ViewData["Title"] = "Create";
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




<div class="content-wrapper" style="min-height: 1907.88px;">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Liste des Bases de données</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="Home">Acceuil</a></li>
                    <li class="breadcrumb-item active">Bases de  Données</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <h2>Create</h2>

                <h4>SsmsDatabases</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Title" class="control-label">Nom de base de donnée</label>
                                <input asp-for="Title" class="form-control" />
